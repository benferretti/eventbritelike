<div class="container">
  <div class="row">
    <div class="col-lg-8 mx-auto text-center">
<%= form_tag charges_path do %>
    <article>
      <% if flash[:error].present? %>
        <div id="error_explanation">
          <p><%= flash[:error] %></p>
        </div>
      <% end %>
      <label class="amount">
        <h2>Montant pour cet événement: <%= @event.price %>€</h2>
      </label>
    </article>

    <%= link_to "Payer", event_attendances_path, method: :post, :class => "btn btn-primary btn-lg"  %>
  
  <% end %>

</div>
</div>
</div>